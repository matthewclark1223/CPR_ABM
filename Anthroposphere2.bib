	keywords = {Biodiversity, Conservation science, Species diversity, Deforestation, Forests, Conservation biology, Decision making, Mammals},
	file = {Full Text PDF:C\:\\Users\\Matthewclark989\\Zotero\\storage\\DBZFVCL9\\Renwick et al. - 2015 - Reserves in Context Planning for Leakage from Pro.pdf:application/pdf;Snapshot:C\:\\Users\\Matthewclark989\\Zotero\\storage\\LGIGHZTR\\article.html:text/html}
