	langid = {english},
	file = {Springer Full Text PDF:C\:\\Users\\Matthewclark989\\Zotero\\storage\\KBW8EKLL\\Atmadja and Verchot - 2012 - A review of the state of research, policies and st.pdf:application/pdf}
